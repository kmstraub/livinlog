<%= link_to 'Back', logs_path %>
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading center">
			</div>
			<div class="panel-body">
				<p><%= simple_format @log.description %></p>
					<a href="<%= user_path @log.user %>">
            <span class="name"><%= @log.user.name %></span>
            </a>
            @<%= @log.user.username %></br>
            <% if @log.user == current_user %>
							<%= link_to edit_log_path(@log) do %><span class="glyphicon glyphicon-edit"></span> Edit
							<% end %>
        			<%= link_to log_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
          			<span class="glyphicon glyphicon-trash"></span> Delete
         			 <% end %>
         			<% end %>
			</div>
		</div>
	</div>
</div>